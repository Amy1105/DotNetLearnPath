@page
@model Acme.BookStore.Web.Pages.Books.IndexModel
@using Microsoft.Extensions.Localization
@using Acme.BookStore.Localization;
@inject IStringLocalizer<BookStoreResource> L
@{
    <abp-script src="/Pages/Books/Index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Menu:Books"]</abp-card-title>
            </abp-column>

            <abp-column size-md="_6" class="text-end">
                <abp-button id="AddButton" text="@L["NewProduct"].Value" icon="plus" button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>

    <abp-card-body>
        <abp-table id="BooksTable" striped-rows="true" />
    </abp-card-body>
</abp-card>